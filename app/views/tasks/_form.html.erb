<%= form_for(@task) do |f| %>
  <% if task.errors.any? %>
    <div id="error_explanation">
      <ul>
        <% task.errors.full_tasks.each do |task| %>
          <li><%= task %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  
  <%= f.label :content, "タスク" %>
  <%= f.text_field :content %>
  
  <%= f.label :status, "状態" %>
  <%= f.select :status,["未了", "実施中", "完了"] %>
  
  <%= f.submit "登録" %>
  
<% end %>